<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            tools:context="camilasales.camilasalesadvocacia.control.activity.LoginActivity">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo"/>

                <EditText
                    android:id="@+id/edemailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EMAIL:"
                    android:gravity="left"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#ffffff"/>

                <EditText
                    android:id="@+id/edsenhaLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SENHA:"
                    android:gravity="left"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:inputType="textPassword"
                    android:backgroundTint="#ffffff"/>
                <Button
                    android:id="@+id/btacessarLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acessar"
                    android:textSize="18sp"
                    android:backgroundTint="#ffffff"/>
                <TextView
                    android:id="@+id/txtnaotemcadastroLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NÃ£o tem cadastro? Clique aqui"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"/>

        </LinearLayout>
</RelativeLayout>
